@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new Category
            </a>
        </div>
    </div>



    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="text-white">
                    Category Name
                </th>
                <th class="text-white">
                    Display Order
                </th>
                <th class="text-white">
                    Actions
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%" class="text-white">
                        @obj.Name
                    </td>
                    <td width="30%" class="text-white">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-auto btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 rounded">
                                <i class="bi bi-pencil-square"></i>&nbsp; Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 rounded">
                                <i class="bi bi-trash3-fill"></i>&nbsp; Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>